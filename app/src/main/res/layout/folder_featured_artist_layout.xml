<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/singer_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@color/Dark_Red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <!--android:src="@drawable/imagindragons"-->

    <TextView
        android:id="@+id/singer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Justin Bieber"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:textColor="#A88686"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/singer_image"
        app:layout_constraintRight_toRightOf="@id/singer_image"
        app:layout_constraintTop_toBottomOf="@id/singer_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>