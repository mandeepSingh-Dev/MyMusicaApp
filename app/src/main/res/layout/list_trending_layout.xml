    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradint_for_recylerview"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    <TextView
        android:id="@+id/InLanguage_TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/constraintLayout"
        app:layout_constraintTop_toTopOf="@id/constraintLayout"
        android:text="In Punjabi (10)"
        android:textSize="15sp"
        android:fontFamily="@font/baloo_chettan"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:id="@+id/arrowImageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:layout_constraintLeft_toRightOf="@id/InLanguage_TextView"
        app:layout_constraintTop_toTopOf="@id/InLanguage_TextView"
        app:layout_constraintBottom_toBottomOf="@id/InLanguage_TextView"/>

    <ImageView
        android:id="@+id/play_Button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_baseline_play_arrow_24"
        app:layout_constraintRight_toRightOf="@id/constraintLayout"
        app:layout_constraintBottom_toBottomOf="@id/InLanguage_TextView"/>

