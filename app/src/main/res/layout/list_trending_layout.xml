               android:layout_marginLeft="10dp"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="15dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:background="#C81616"/>
           <TextView
               android:id="@+id/song_name1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:text="Dont't You Hold Me Down"
               android:textSize="10sp"
               android:ellipsize="end"
               android:singleLine="true"
               android:fontFamily="@font/baloo_chettan"
               android:layout_marginLeft="15dp"
               app:layout_constraintLeft_toRightOf="@id/songImage1"
               app:layout_constraintTop_toTopOf="@id/songImage1"
               app:layout_constraintRight_toRightOf="parent"/>
           <TextView
               android:id="@+id/artist_name1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:textColor="#FFD80F"
               android:text="Alan Walker,Georgia ku"
               android:textSize="10sp"
               android:fontFamily="@font/baloo_chettan"
               android:ellipsize="end"
               android:singleLine="true"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="7dp"
               app:layout_constraintLeft_toRightOf="@id/songImage1"
               app:layout_constraintTop_toBottomOf="@id/song_name1"
               app:layout_constraintRight_toRightOf="parent"/>
       </androidx.constraintlayout.widget.ConstraintLayout>
