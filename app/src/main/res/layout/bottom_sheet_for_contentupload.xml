<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AE112F"
    android:id="@+id/mainConstraintLayout"
    android:fitsSystemWindows="true"
    android:padding="36dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior"    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/layouyt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Spinner
            android:id="@+id/TrendingSpinner"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:backgroundTint="#E37F34"
            android:background="@drawable/shape_for_buttons"
            android:entries="@array/Trending_Playlist"/>


        <Spinner
            android:id="@+id/topChartsSpinner"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_for_buttons"
            android:backgroundTint="#E89D64"
            android:entries="@array/Top_Charts"
            android:text="Trending"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layouyt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layouyt1">
        <Spinner
            android:id="@+id/discoverSpinner"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/shape_for_buttons"
            android:backgroundTint="@color/light_blue_A400"
            android:entries="@array/Discover"
            android:text="Trending"
            />
        <Spinner
            android:id="@+id/MoodsSpinner"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#3AD1D1"
            android:background="@drawable/shape_for_buttons"
            android:entries="@array/MoodsandCollection"
            android:text="Trending"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layouyt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toTopOf="@id/lastview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layouyt2">
        <Spinner
            android:id="@+id/featuredArtistSpinner"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_200"
            android:background="@drawable/shape_for_buttons"
            android:entries="@array/Featured_Artists"
            android:text="Trending"
            />
    </LinearLayout>
    <View
        android:id="@+id/lastview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/layouyt3"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>