<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/folder_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/folder_image"
        android:layout_width="165dp"
        android:layout_height="90dp"
        android:background="@drawable/shape_universe"
        android:src="@drawable/imagindragons"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/language_Textview_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Festival"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="@id/folder_image"
  app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>