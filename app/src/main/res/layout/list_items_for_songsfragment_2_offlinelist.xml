<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#322D2D"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/songImagee"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/gradent_for_rootlay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/songNamee"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Churi"
        android:textSize="15sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:fontFamily="@font/baloo_chettan"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/songImagee"
        app:layout_constraintTop_toTopOf="@id/songImagee"/>
    <TextView
        android:id="@+id/artistNamee"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Khan Bhaini,Shipra Goyal"
        android:textSize="12sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:fontFamily="@font/kanit_thin"
        android:textColor="#C5A4A4"
        app:layout_constraintLeft_toLeftOf="@id/songNamee"
        app:layout_constraintTop_toBottomOf="@id/songNamee"/>


</androidx.constraintlayout.widget.ConstraintLayout>