                        <include
                            android:id="@+id/include_Rock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            layout="@layout/folder_layout_small"/>
                        <include
                            android:id="@+id/include_Kids"
